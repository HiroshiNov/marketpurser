<div class="text-center">
  <h1>SETTINGS</h1>
</div>
<div class="bg-seconry">
  <div class="row">
    <div class="col-sm-7 offset-sm-1">
        <%= form_with(model:@user,local: true) do |f| %>
        <%= render "layouts/error_messages_name", model: f.object %>
        <div class="form-group mb-0">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
    <div class="col-sm-3 d-flex align-items-end">
      <%= f.submit "SAVE" , class: "btn btn-primary form-control" %>
      <% end %>
    </div>
  </div>
  <div class="mt-3 border-bottom"></div>

  <div class="row">
    <div class="col-sm-7 offset-sm-1">
      <%= form_with(model:@user,local: true) do |f| %>
      <%= render "layouts/error_messages_email", model: f.object %>
      <div class="form-group mb-0">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-3 d-flex align-items-end">
      <%= f.submit "SAVE" , class: "btn btn-primary form-control" %>
      <% end %>
    </div>
  </div>
  <div class="mt-3 border-bottom"></div>
    
  <div class="row">
    <div class="col-sm-7 offset-sm-1">
      <%= form_with(model:@user,local: true) do |f| %>
      <%= render "layouts/error_messages_pass", model: f.object %>
      <div class="form-group mb-0">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group mb-0">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-3 d-flex align-items-end">
      <%= f.submit "SAVE" , class: "btn btn-primary form-control" %>
      <% end %>
    </div>
  </div>
  <div class="mt-3 border-bottom"></div>
    <div class="text-center mt-3">
     <%= link_to "DELETE ACCOUNT", @user , method: :delete, data:{confirm: "アカウントを削除してよろしいですか？" },class: "btn btn-danger" %>
   </div>
  </div>
</div>